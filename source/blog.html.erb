---
title: Blog Archive
paginate: true
---
		<div class="container std blog col-three">
			<div class="wrapper">
				<header class="page-title">
					<h1>Hints &amp; Tips</h1>
				</header>
				<%= partial 'partials/sidebar-left' %>
	    		<div class="content">
		    		<% blog.articles[0...99].each do |article| %>
					  <article class="post">
							<h3>
								<a href="<%= article.url %>"><%= article.title %></a>
							</h3>
							<p class="meta"><small>Posted on: <%= article.date.strftime('%b %e %Y') %> | Categorised under: <%= article.data.category %> </small></p>
							<div class="desc">
								<img src="/images/<%= article.data.featimg %>" alt="<%= article.title %>" class="blog-feat" />
								<%= article.data.excerpt %>
							</div>
							<a href="<%= article.url %>" class="btn">Continue</a>
							<div class="bottom-border"></div>
						</article>
					<% end %>
	    		</div>
	    		<%= partial 'partials/blog/sidebar-right' %>
			</div>
		</div>
		<%= partial 'partials/newsletter' %>
		<%= partial 'partials/contact' %>
			

